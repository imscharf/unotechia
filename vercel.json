{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    // Rota para o seu API Gateway (ajuste o URL conforme sua infra AWS)
    {
      "src": "/api/(.*)",
      "dest": "https://epeyqjzu6c.execute-api.sa-east-1.amazonaws.com/Dev"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}